name: Java Hello World Test
on: [push, pull_request]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Java
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: Compile and Test
        run: |
          javac HelloWorld.java tests/HelloWorldTest.java
          java -jar junit-platform-console-standalone-1.8.2.jar --class-path . --select-class HelloWorldTest

